generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  ratings   Rating[]
  recipes   Recipe[]
}

model Recipe {
  id           Int      @id @default(autoincrement())
  title        String
  ingredients  String
  instructions String
  authorId     Int
  createdAt    DateTime @default(now())
  avgRating    Float    @default(0)
  ratings      Rating[]
  author       User     @relation(fields: [authorId], references: [id])

  @@index([title])
}

model Rating {
  id        Int      @id @default(autoincrement())
  userId    Int
  recipeId  Int
  value     Int
  createdAt DateTime @default(now())
  recipe    Recipe   @relation(fields: [recipeId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, recipeId], map: "user_recipe_unique")
}
